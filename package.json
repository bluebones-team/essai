{
  "name": "recruit",
  "author": "Bluebones Team",
  "module": "index.ts",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "eslint --cache --max-warnings 0 \"packages/src/**/*.{js,ts}\" --fix",
    "format": "prettier --write \"packages/*/src/**/*.{js,ts,json,css,html,md}\""
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/bun": "latest",
    "dotenv": "^16.4.5",
    "husky": "^9.1.5",
    "prettier": "^3.3.3"
  },
  "peerDependencies": {
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@vue/reactivity": "^3.5.13",
    "zod": "^3.23.8"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md}": [
      "prettier --write"
    ],
    "package.json": [
      "prettier --write"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "lf",
    "singleQuote": true,
    "trailingComma": "all",
    "semi": true
  }
}
